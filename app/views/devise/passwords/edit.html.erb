<%= render :partial => 'layouts/errors' %>
<div class="login-form">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <h3 class="text-center">Change your password</h3>
  <div class="field form_group">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (#{@minimum_password_length} character minimum)" %>
  </div>

  <div class="field form_group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat Password" %>
  </div>

  <div class="actions form_group">
    <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
  </div>
    <div class="clearfix2">
      <p> <%= link_to "Log in", new_session_path(resource_name) %> or <%= link_to "Sign Up", new_registration_path(resource_name)%></p>
    </div>
<% end %>
</div>
