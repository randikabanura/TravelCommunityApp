<%= render :partial => 'layouts/errors' %>
<div class="login-form">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h3 class="text-center">Forgot your password?</h3>
  <div class="field form_group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions form_group">
    <%= f.submit "Send me email with instructions", class: "btn btn-primary btn-block"%>
  </div>
    <div class="clearfix2">
      <p> <%= link_to "Log in", new_session_path(resource_name) %> or <%= link_to "Sign Up", new_registration_path(resource_name)%></p>
    </div>
<% end %>
</div>