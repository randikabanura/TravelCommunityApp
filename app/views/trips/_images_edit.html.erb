<% (0...@trip.photos.count).each do |image| %>
  <%= image_tag(@trip.thumbnail(image, 100)) %>
  <%= link_to image_tag("times-circle-regular.png", size: '20x20'), delete_image_attachment_trip_path(trip_id: @trip.photos[image], id: @trip.id), style: 'margin-top:-10px; margin-left:-10px', method: :delete, remote: true, data: {confirm: "Are you sure?"}%>
<% end %>