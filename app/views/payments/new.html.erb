<div class="container payments">
  <div class="plan_details col-md-5 col-sm-12">
    <% if params[:id] == "pro_user_1" %>
      <%= render partial: 'payments/pro_user_1' %>
    <% elsif params[:id] == "pro_user_2" %>
      <%= render partial: 'payments/pro_user_2' %>
    <% else %>
      <%= render partial: 'payments/pro_user_3' %>
    <% end %>
  </div>
  <div class="divider col-md-2 col-sm-0">
    <div></div>
  </div>
  <%= form_for(@payment, html: { class: "payment_form col-md-5 col-sm-12"} ) do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <h3 class="text-center">Payment Details</h3>
          </div>
        </div>
        <div class="panel-body">
          <form role="form">
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <label>CARD NUMBER</label>
                  <div class="input-group">
                    <%= f.text_field :card_number, class: "form-control", placeholder: "Valid Card Number" %>
                    <span class="input-group-addon"><span class="fa fa-credit-card"></span></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-7 col-md-7">
                <div class="form-group">
                  <label><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span>
                    DATE</label>
                  <%= f.text_field :date_exp, class: "form-control", placeholder: "MM/YY" %>
                </div>
              </div>
              <div class="col-xs-5 col-md-5 pull-right">
                <div class="form-group">
                  <label>CV CODE</label>
                  <%= f.text_field :code, class: "form-control", placeholder: "CVC" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <label>CARD OWNER</label>
                  <%= f.text_field :card_name, class: "form-control", placeholder: "Card Owner Name" %>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-xs-12">
              <%= f.submit class: "form-control", placeholder: "Valid Card Number" %>
            </div>
          </div>
        </div>
      </div>
  <% end %>

</div>