<div class="container payments">
  <div class="plan_details col-md-5 col-sm-12">
    <% if params[:id] == "1" %>
      <%= render partial: 'payments/pro_user_1' %>
    <% elsif params[:id] == "2" %>
      <%= render partial: 'payments/pro_user_2' %>
    <% else %>
      <%= render partial: 'payments/pro_user_3' %>
    <% end %>
  </div>
  <div class="divider col-md-2 col-sm-0">
    <div></div>
  </div>
  <%= form_for(@payment, url: payments_path, method: :post, html: {class: "payment_form col-md-5 col-sm-12"}) do |f| %>
    <%= f.hidden_field :user, value: current_user.id %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <div class="row">
          <h3 class="text-center">Payment Details</h3>
        </div>
      </div>

      <div class="panel-body">
        <form role="form">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label>CARD NUMBER</label>
                <div class="input-group">
                  <%= f.text_field :card_number, type: "Number", class: "form-control", placeholder: "Valid Card Number" %>
                  <% if resource.errors[:card_number].present? %>
                    <div class="form_errors">Card number <%= resource.errors[:card_number].first %></div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row year_cvc">
            <div class="col-xs-7 col-md-7">
              <div class="form-group">
                <label><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span>
                  DATE</label>
                <%= f.text_field :date_exp, placeholder: "MM/YY", autocomplete: "off", id: "start", class: "datepicker form-control" %>
                <% if resource.errors[:date_exp].present? %>
                  <div class="form_errors">Expire date <%= resource.errors[:date_exp].first %></div>
                <% end %>
              </div>
            </div>
            <div class="col-xs-5 col-md-5 pull-right">
              <div class="form-group">
                <label>CV CODE</label>
                <%= f.text_field :code, type: "Number", class: "form-control", placeholder: "CVC" %>
                <% if resource.errors[:code].present? %>
                  <div class="form_errors">Code <%= resource.errors[:code].first %></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label>CARD OWNER</label>
                <%= f.text_field :card_name, class: "form-control", placeholder: "Card Owner Name" %>
                <% if resource.errors[:card_name].present? %>
                  <div class="form_errors">Card name <%= resource.errors[:card_name].first %></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label>Select Your Plan</label>
                <%= f.select :plan, options_for_select([['Plan $5', 1], ['Plan $9', 2], ['Plan $15', 3]], selected: params[:id]), class: "form-control" %>
                <% if resource.errors[:plan].present? %>
                  <div class="form_errors">Plan <%= resource.errors[:plan].first %></div>
                <% end %>
              </div>
            </div>
          </div>
        </form>
      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-12">
            <%= f.submit class: "form-control btn btn-danger", placeholder: "Valid Card Number" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
    $(function () {
        $(function () {
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "-50:+50",
                dateFormat: "yy-mm-dd"
            });
        });

    });
</script>